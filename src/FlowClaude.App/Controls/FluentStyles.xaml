  <!-- ==================== Color System ==================== -->
  <!-- Dark Theme -->
  <Color x:Key="DarkBackground">#0F0F0F</Color>
  <Color x:Key="DarkSurface">#1C1C1E</Color>
  <Color x:Key="DarkSurfaceHover">#2C2C2E</Color>
  <Color x:Key="DarkBorder">#38383A</Color>
  <Color x:Key="DarkTextPrimary">#FFFFFF</Color>
  <Color x:Key="DarkTextSecondary">#8E8E93</Color>
  <Color x:Key="DarkPrimary">#0A84FF</Color>
  <Color x:Key="DarkPrimaryHover">#409CFF</Color>
  <Color x:Key="DarkSuccess">#30D158</Color>
  <Color x:Key="DarkError">#FF453A</Color>
  <Color x:Key="DarkWarning">#FFD60A</Color>
  
  <!-- Light Theme -->
  <Color x:Key="LightBackground">#FFFFFF</Color>
  <Color x:Key="LightSurface">#F2F2F7</Color>
  <Color x:Key="LightSurfaceHover">#E5E5EA</Color>
  <Color x:Key="LightBorder">#C6C6C8</Color>
  <Color x:Key="LightTextPrimary">#1C1C1E</Color>
  <Color x:Key="LightTextSecondary">#8E8E93</Color>
  <Color x:Key="LightPrimary">#007AFF</Color>
  <Color x:Key="LightPrimaryHover">#0056CC</Color>
  <Color x:Key="LightSuccess">#34C759</Color>
  <Color x:Key="LightError">#FF3B30</Color>
  <Color x:Key="LightWarning">#FFCC00</Color>
  
  <!-- ==================== Dynamic Resources ==================== -->
  <SolidColorBrush x:Key="AppBackground" Color="{DynamicResource DarkBackground}"/>
  <SolidColorBrush x:Key="AppForeground" Color="{DynamicResource DarkTextPrimary}"/>
  <SolidColorBrush x:Key="SurfaceColor" Color="{DynamicResource DarkSurface}"/>
  <SolidColorBrush x:Key="WindowBackground" Color="{DynamicResource DarkBackground}"/>
  <SolidColorBrush x:Key="WindowForeground" Color="{DynamicResource DarkTextPrimary}"/>
  <SolidColorBrush x:Key="SidebarBackground" Color="{DynamicResource DarkSurface}"/>
  <SolidColorBrush x:Key="HeaderBackground" Color="{DynamicResource DarkSurface}"/>
  <SolidColorBrush x:Key="InputBackground" Color="{DynamicResource DarkSurfaceHover}"/>
  <SolidColorBrush x:Key="TerminalBackground" Color="{DynamicResource DarkBackground}"/>
  <SolidColorBrush x:Key="TerminalTabBackground" Color="{DynamicResource DarkSurface}"/>
  <SolidColorBrush x:Key="TerminalInputBackground" Color="{DynamicResource DarkSurfaceHover}"/>
  <SolidColorBrush x:Key="PopupBackground" Color="{DynamicResource DarkSurface}"/>
  <SolidColorBrush x:Key="BorderColor" Color="{DynamicResource DarkBorder}"/>
  <SolidColorBrush x:Key="MutedForeground" Color="{DynamicResource DarkTextSecondary}"/>
  <SolidColorBrush x:Key="PrimaryColor" Color="{DynamicResource DarkPrimary}"/>
  <SolidColorBrush x:Key="SuccessColor" Color="{DynamicResource DarkSuccess}"/>
  <SolidColorBrush x:Key="ErrorColor" Color="{DynamicResource DarkError}"/>
  <SolidColorBrush x:Key="WarningColor" Color="{DynamicResource DarkWarning}"/>
  <SolidColorBrush x:Key="OverlayBackground" Color="#CC0F0F0F"/>
  <SolidColorBrush x:Key="PopupShadow" Color="#40000000"/>
  <SolidColorBrush x:Key="ComboBoxBackground" Color="{DynamicResource DarkSurfaceHover}"/>
  
